    <title>Abrir chamado</title>
</head>

<body>
    <header>
        <div class="container-fluid h-100">
            <div class="row form-cadastro justify-content-center ">
                <div class="col-md-3 align-self-center area-form">
                    <div>
                        <h1 class="text-left bg-success d-block text-white p-3" style="font-size: 20px;">Suporte</h1>
                    </div>
                </div>
            </div>
        </div>
    </header>
    <main>
  <h1><%=dados.length%></h1>

        <div class="container-fluid h-100">
            <div class="row form-cadastro justify-content-center">
                <div class="col-md-3 align-self-center area-form">
                    <img src="../../images/fabrica-manutencao-logo 2.png" class="mx-auto d-block mt-5" />
                    <div>
                      
                        <h1 class="d-block text-center mt-5" style="font-size: 20px;">Informe abaixo o problema: </h1>

                        <form action="#" method="POST">
                            <div>
                                <input type="text" id="cpf" name="cpf" class="form-control bg-light rounded mt-4"
                                    placeholder="O seu CPF">
                            </div>

                            <div>
                                <input type="text" id="area" name="area" class="form-control bg-light rounded mt-4" value="<%= dados[0].nome%>"
                                    readonly>
                            </div>
                            <div>
                                <select class="form-control mt-4" id="equipamento" name="equipamento">
                                   <%
                                   if(dados.length == 1){ %>
                                    <option value = "<%= dados[0].id_equipamento%>"><%= dados[0].nome_equipamento%></option> 
                                   <%}else{
                                    for(var i = 0; i < dados.length; i++){%>
                                    <option value = "<%= dados[i].id_equipamento%>"><%= dados[i].nome_equipamento%></option>
                                    <%}%>
                                   <%}%>

                                    
                                </select>
                            </div>
                            <div>
                                <select id="problema" name="problema" class="form-control mt-4">
                                    <option value="Problema">Selecione o problema</option>
                                    <!-- esse é o campo que vai exibir os problemas que forem cadastrados -->
                                </select>
                                <!-- esta div só vai aparecer se for selecionado a opção outros -->
                                <div id="pai">
                                    <div id="div2">
                                        <textarea class="form-control bg-light rounded mt-4" rows="3"></textarea>
                                    </div>
                                </div>
                            </div>

                            <div class="form-group mt-4">
                                <label for="path">Anexe aqui um arquivo</label>
                                <input type="file" class="form-control-file" id="path" value="Anexar">
                              </div>
                            <button type="submit" class="btn btn-success float-right mt-4 ">Enviar</button>
                            

                        </form>

                    </div>


                </div>
            </div>
        </div>
    </main>
   
    
    <script type="text/javascript">
   

     $("#equipamento").click(function() {
        $("#problema").empty();
        const url = "http://localhost:2020/buscar/problemas/"+$("#equipamento").val();
const body = { name: "teste" }

fetch(url, {
  method: 'GET'
})
  .then((res) => res.json())
  .then((response) => {
    for(var i=0;i<response.length;i++){
        $('#problema').append($('<option>', {
    value: response[i].nome_problema,
    text: response[i].nome_problema
}));
    }
  })
}


);

    </script>

    <script src="https://code.jquery.com/jquery-3.4.1.slim.min.js"
        integrity="sha384-J6qa4849blE2+poT4WnyKhv5vZF5SrPo0iEjwBvKU7imGFAV0wwj1yYfoRSJoZ+n"
        crossorigin="anonymous"></script>
