    <main>
        <div class="container-fluid h-100">
            <div class="row form-cadastro justify-content-center ">
                <div class="col-md-7 align-self-center area-form">
                    <div>
                        <h1 class="d-block text-left ml-0 mt-4" style="font-size: 20px;" >Pesquisar Area: </h1>
                        <input type="text" class="form-control bg-light col-9" placeholder="Nome da área" id = "nome_area">
                        <a id="pesquisar_area" onclick="pesquisar_equipamento()"><button class="float-right mr-5 btn btn-link"><img src="../images/a.png" width="30px"
                                    height="30px" style="margin-top: -40px; margin-right:-50px;"
                                    class="float-right "></button></a>
                    </div>
                    <div style="margin-top: 8px; border-top: 2px solid #000000;"> </div>
                    <!-- esta informação só vai aparecer quando tiver áreas cadastradas coloquei um exemplo para ver como fica -->
                    <div>
                        <div><a href="/painel_admin/cadastrar_area"><button class="btn btn-success mt-5">Adicionar Área</button></a></div>
                        <div>

                            <% if(areas.length > 0){%>
                            <%for(var i = 0; i<areas.length ; i++){%>
                            <input type="text" class="form-control bg-light col-9 mt-4"
