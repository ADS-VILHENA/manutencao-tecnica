                                    data-target="#Pesquisar_equipamento" style="margin-top: -43px;"><img
                                        src="../images/remover.png " width="35px" height="35px"
                                        style="margin-right: -25px;"></button></a>
                            <a href="/painel_admin/atualizar_area_by_id/<%=areas[i].id_area%>"><button
                                    class="float-right  btn btn-link"
                                    style="margin-top: -43px; margin-right: -120px;"><img src="../images/lapis.png "
                                        width="35px" height="35px" style="margin-right: 19px;"></button></a>
                            <%}%>
                                    <%}%>

                        </div>
                    </div>
                    <div>
                       
                    </div>
                </div>
            </div>
